<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layoutMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    tools:context="com.gfaiers.hangman.MainActivity"
    android:background="@color/background">

    <com.google.android.gms.ads.AdView android:id="@+id/adViewBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"/>
    <LinearLayout android:id="@+id/relativeLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <LinearLayout android:id="@+id/layoutWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewMain0"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/us"
                android:layout_weight="1"/>

            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewMain1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/us"
                android:layout_weight="1"/>

            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewMain2"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/us"
                android:layout_weight="1"/>

            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewMain3"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/us"
                android:layout_weight="1"/>

            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewMain4"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/us"
                android:layout_weight="1"/>

            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewMain5"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/us"
                android:layout_weight="1"/>

            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewMain6"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/us"
                android:layout_weight="1"/>

            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewMain7"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/us"
                android:layout_weight="1"/>

            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewMain8"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/us"
                android:layout_weight="1"/>

            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewMain9"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/us"
                android:layout_weight="1"/>


            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewMain10"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/us"
                android:layout_weight="1"/>

        </LinearLayout>

        <fragment android:id="@+id/fragmentMainActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="layout.FragmentMainActivity"
            tools:layout="@layout/fragment_main_activity"/>

    </LinearLayout>
    <LinearLayout android:id="@+id/layoutButtonsMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button android:id="@+id/buttonNewGame"
            style="?android:buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/new_game"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size"
            android:textColor="@color/button_text"
            android:background="@color/button_face"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/button_margin"/>

        <Button android:id="@+id/buttonHighScores"
            style="?android:buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/best_times"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size"
            android:textColor="@color/button_text"
            android:background="@color/button_face"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/button_margin"/>

        <Button android:id="@+id/buttonSettings"
            style="?android:buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/settings"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size"
            android:textColor="@color/button_text"
            android:background="@color/button_face"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>